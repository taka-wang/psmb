# drone.io:0.5

pipeline:

    build:
        image: takawang/dind:push
        volumes:
            - /var/run/docker.sock:/var/run/docker.sock
        commands:
            - docker build -t b --no-cache=true -f release/Dockerfile.alpine-build .
            - docker run -v $(pwd)/release:/tmp -itd b
            - docker build -t takawang/psmb-srv:x86 --no-cache=true -f release/Dockerfile.alpine-pack release/.
            - docker push takawang/psmb-srv:x86

