redis:
    image: redis:3.2.3-alpine
    ports:
        - "6379"

mongodb:
    image: mongo:3.2
    ports:
        - "27017"
slave:
    image: edgepro/c-modbus-slave:x86

modbusd:
    image: edgepro/modbusd:x86
    volumes:
        - /tmp:/tmp
    links:
        - slave

psmbtcpsrv:
    build: .
    dockerfile: tcp-srv/Dockerfile
    volumes_from:
        - modbusd
    links:
        - redis
        - mongodb

dummysrv:
    build: .
    dockerfile: tcp-srv/test/dummy-srv/Dockerfile
    volumes_from:
        - modbusd
    links:
        - slave
    volumes:
        - /var/tmp:/var/tmp # mount for test

